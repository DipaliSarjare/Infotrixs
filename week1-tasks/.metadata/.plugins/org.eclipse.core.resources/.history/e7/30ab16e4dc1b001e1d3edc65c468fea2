package com.Ems.model;

public class Employee {
	    private int id;
	    private String name;
	    private int age;
	    private String designation;

	    public Employee(int id, String name, int age, String designation) {
	        this.id = id;
	        this.name = name;
	        this.age = age;
	        this.designation = designation;
	    }

	    // Getters and setters

	    public int getId() {
	        return id;
	    }

	    public String getName() {
	        return name;
	    }

	    public int getAge() {
	        return age;
	    }

	    public String getDesignation() {
	        return designation;
	    }

	    // ToString method

	    @Override
	    public String toString() {
	        return "Employee [id=" + id + ", name=" + name + ", age=" + age + ", designation=" + designation + "]";
	    }
	    
	    // Method to convert Employee object to a formatted string
	    public String toFormattedString() {
	        return id + "," + name + "," + age + "," + designation;
	    }
}
